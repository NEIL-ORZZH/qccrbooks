<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="40dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/btn_message_like"
        android:background="@color/fengexian"/>

    <com.like.LikeButton
        android:id="@+id/btn_message_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingEnd="5dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        app:anim_scale_factor="3"
        app:icon_size="15dp"
        app:icon_type="heart"/>

    <TextView
        android:id="@+id/tv_message_like_count"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/btn_message_like"
        android:gravity="center_vertical"
        android:minWidth="45dp"
        android:textColor="@color/dark_grayish_blue_99"
        android:textSize="12sp"
        tools:text="111"/>

    <ImageView
        android:id="@+id/iv_message_comment"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/tv_message_like_count"
        android:background="@null"
        android:paddingBottom="10dp"
        android:paddingEnd="5dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:src="@mipmap/ic_comment"
        android:tint="@color/dark_gray_90"/>

    <TextView
        android:id="@+id/tv_message_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/iv_message_comment"
        android:gravity="center_vertical"
        android:minWidth="45dp"
        android:textColor="@color/dark_grayish_blue_99"
        android:textSize="12sp"
        tools:text="12"/>

    <ImageView
        android:id="@+id/iv_message_share"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/tv_message_comment_count"
        android:background="@null"
        android:padding="10dp"
        android:src="@mipmap/ic_share"/>
</RelativeLayout>