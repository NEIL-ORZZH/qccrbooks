<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="40dp">

    <com.like.LikeButton
        android:id="@+id/iv_message_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:anim_scale_factor="3"
        app:icon_size="22dp"
        app:icon_type="heart" />

    <TextView
        android:id="@id/tv_message_like_count"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_message_like"
        android:minWidth="45dp"
        android:textColor="@color/dark_grayish_blue_99"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_message_comment"
        android:layout_width="35dp"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@+id/tv_message_like_count"
        android:background="@null"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:src="@mipmap/ic_comment"
        android:tint="@color/dark_gray_90" />

    <TextView
        android:id="@+id/tv_message_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_message_comment"
        android:gravity="center_vertical"
        android:minWidth="45dp"
        android:textColor="@color/dark_grayish_blue_99"
        android:textSize="12.0sp" />

    <ImageView
        android:id="@+id/iv_message_share"
        android:layout_width="40dp"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/tv_message_comment_count"
        android:background="@null"
        android:padding="10dp"
        android:src="@mipmap/ic_share" />
</RelativeLayout>